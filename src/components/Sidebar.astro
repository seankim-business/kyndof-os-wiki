---
/**
 * Sidebar Component
 * Navigation sidebar with database categories
 */

// Category definitions matching the entity types
const categories = [
  {
    name: 'People',
    icon: 'users',
    href: '/people',
    description: 'Team members and contacts',
  },
  {
    name: 'Companies',
    icon: 'building',
    href: '/companies',
    description: 'Organizations and partners',
  },
  {
    name: 'Projects',
    icon: 'folder',
    href: '/projects',
    description: 'Active and archived projects',
  },
  {
    name: 'Meetings',
    icon: 'calendar',
    href: '/meetings',
    description: 'Meeting notes and agendas',
  },
  {
    name: 'Tasks',
    icon: 'check-square',
    href: '/tasks',
    description: 'Action items and todos',
  },
  {
    name: 'Documents',
    icon: 'file-text',
    href: '/documents',
    description: 'Knowledge base articles',
  },
];

// Icon mapping for SVG icons
const icons: Record<string, string> = {
  users: '<circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>',
  building: '<rect x="4" y="2" width="16" height="20" rx="2" ry="2"></rect><path d="M9 22v-4h6v4"></path><path d="M8 6h.01"></path><path d="M16 6h.01"></path><path d="M12 6h.01"></path><path d="M12 10h.01"></path><path d="M12 14h.01"></path><path d="M16 10h.01"></path><path d="M16 14h.01"></path><path d="M8 10h.01"></path><path d="M8 14h.01"></path>',
  folder: '<path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>',
  calendar: '<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line>',
  'check-square': '<polyline points="9 11 12 14 22 4"></polyline><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>',
  'file-text': '<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline>',
};

const currentPath = Astro.url.pathname;
---

<nav class="sidebar-nav">
  <div class="sidebar-section">
    <h2 class="sidebar-heading">Navigation</h2>
    <ul class="sidebar-list">
      <li>
        <a
          href="/"
          class:list={['sidebar-link', { active: currentPath === '/' }]}
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          <span>Home</span>
        </a>
      </li>
    </ul>
  </div>

  <div class="sidebar-section">
    <h2 class="sidebar-heading">Databases</h2>
    <ul class="sidebar-list">
      {categories.map((category) => (
        <li>
          <a
            href={category.href}
            class:list={['sidebar-link', { active: currentPath.startsWith(category.href) }]}
            title={category.description}
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={icons[category.icon]} />
            <span>{category.name}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <div class="sidebar-section">
    <h2 class="sidebar-heading">Quick Links</h2>
    <ul class="sidebar-list">
      <li>
        <a href="/dashboard" class:list={['sidebar-link', { active: currentPath.startsWith('/dashboard') }]}>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
          <span>Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/recent" class:list={['sidebar-link', { active: currentPath === '/recent' }]}>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          <span>Recent</span>
        </a>
      </li>
      <li>
        <a href="/graph" class:list={['sidebar-link', { active: currentPath === '/graph' }]}>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="18" cy="5" r="3"></circle>
            <circle cx="6" cy="12" r="3"></circle>
            <circle cx="18" cy="19" r="3"></circle>
            <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
            <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
          </svg>
          <span>Graph View</span>
        </a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .sidebar-nav {
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .sidebar-section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .sidebar-heading {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--text-muted);
    padding: 0 var(--spacing-sm);
    margin: 0;
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .sidebar-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--text-secondary);
    font-size: 14px;
    font-weight: 500;
    transition: all 0.15s ease;
  }

  .sidebar-link:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
  }

  .sidebar-link.active {
    background: var(--bg-active);
    color: var(--text-primary);
  }

  .sidebar-link svg {
    flex-shrink: 0;
    color: var(--text-muted);
  }

  .sidebar-link:hover svg,
  .sidebar-link.active svg {
    color: var(--accent-color);
  }
</style>
