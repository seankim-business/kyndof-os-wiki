---
/**
 * EntityCard Component
 * Card preview for an entity in list views
 */

interface Props {
  id: string;
  title: string;
  type: string;
  description?: string;
  status?: string;
  tags?: string[];
  href: string;
  lastSynced?: Date;
}

const { id, title, type, description, status, tags = [], href, lastSynced } = Astro.props;

// Type colors
const typeColors: Record<string, { bg: string; text: string }> = {
  person: { bg: 'var(--type-person-bg)', text: 'var(--type-person)' },
  company: { bg: 'var(--type-company-bg)', text: 'var(--type-company)' },
  project: { bg: 'var(--type-project-bg)', text: 'var(--type-project)' },
  meeting: { bg: 'var(--type-meeting-bg)', text: 'var(--type-meeting)' },
  task: { bg: 'var(--type-task-bg)', text: 'var(--type-task)' },
  document: { bg: 'var(--type-document-bg)', text: 'var(--type-document)' },
};

const colors = typeColors[type] || { bg: 'var(--bg-tertiary)', text: 'var(--text-muted)' };

// Status colors
const statusColors: Record<string, string> = {
  active: 'var(--status-active)',
  completed: 'var(--status-completed)',
  'on-hold': 'var(--status-on-hold)',
  planning: 'var(--status-planning)',
  archived: 'var(--status-archived)',
  todo: 'var(--status-todo)',
  'in-progress': 'var(--status-in-progress)',
  review: 'var(--status-review)',
  done: 'var(--status-done)',
  blocked: 'var(--status-blocked)',
};
---

<article class="entity-card">
  <a href={href} class="card-link">
    <div class="card-header">
      <span class="card-type" style={`background: ${colors.bg}; color: ${colors.text}`}>
        {type}
      </span>
      {status && (
        <span class="card-status" style={`--status-color: ${statusColors[status] || 'var(--text-muted)'}`}>
          {status}
        </span>
      )}
    </div>
    <h3 class="card-title">{title}</h3>
    {description && (
      <p class="card-description">{description}</p>
    )}
    {tags.length > 0 && (
      <div class="card-tags">
        {tags.slice(0, 3).map((tag) => (
          <span class="card-tag">{tag}</span>
        ))}
        {tags.length > 3 && (
          <span class="card-tag-more">+{tags.length - 3}</span>
        )}
      </div>
    )}
  </a>
</article>

<style>
  .entity-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .entity-card:hover {
    border-color: var(--border-hover);
    box-shadow: var(--shadow-md);
  }

  .card-link {
    display: block;
    padding: var(--spacing-md);
    text-decoration: none;
    color: inherit;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .card-type {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 2px 8px;
    border-radius: var(--radius-sm);
  }

  .card-status {
    font-size: 12px;
    font-weight: 500;
    color: var(--status-color);
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .card-status::before {
    content: '';
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--status-color);
  }

  .card-title {
    margin: 0 0 var(--spacing-xs);
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .entity-card:hover .card-title {
    color: var(--link-color);
  }

  .card-description {
    margin: 0 0 var(--spacing-sm);
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }

  .card-tag {
    font-size: 11px;
    padding: 2px 6px;
    background: var(--bg-tertiary);
    color: var(--text-muted);
    border-radius: var(--radius-sm);
  }

  .card-tag-more {
    font-size: 11px;
    padding: 2px 6px;
    color: var(--text-muted);
  }
</style>
