---
import WikiLayout from '@layouts/WikiLayout.astro';
import EntityCard from '@components/EntityCard.astro';

// In production, this would fetch from content collections
// For now, show sample data to demonstrate the layout
const sampleEntities = [
  {
    id: '1',
    title: 'Project Alpha',
    type: 'project',
    description: 'Main product development initiative for Q1 2024',
    status: 'active',
    tags: ['engineering', 'priority'],
    href: '/projects/project-alpha',
  },
  {
    id: '2',
    title: 'Weekly Sync',
    type: 'meeting',
    description: 'Team standup and sprint review',
    tags: ['recurring'],
    href: '/meetings/weekly-sync',
  },
  {
    id: '3',
    title: 'Acme Corp',
    type: 'company',
    description: 'Enterprise client - active partnership',
    tags: ['client', 'enterprise'],
    href: '/companies/acme-corp',
  },
];

const stats = {
  people: 24,
  companies: 12,
  projects: 8,
  meetings: 156,
  tasks: 89,
  documents: 45,
};
---

<WikiLayout title="Home" description="Kyndof Knowledge Wiki - Your company's knowledge base">
  <header class="home-header">
    <h1>Welcome to the Wiki</h1>
    <p class="home-description">
      Your company's interconnected knowledge base. Browse databases, explore connections,
      and discover insights across your organization.
    </p>
  </header>

  <section class="stats-section">
    <h2>Overview</h2>
    <div class="stats-grid">
      <a href="/people" class="stat-card">
        <span class="stat-value">{stats.people}</span>
        <span class="stat-label">People</span>
      </a>
      <a href="/companies" class="stat-card">
        <span class="stat-value">{stats.companies}</span>
        <span class="stat-label">Companies</span>
      </a>
      <a href="/projects" class="stat-card">
        <span class="stat-value">{stats.projects}</span>
        <span class="stat-label">Projects</span>
      </a>
      <a href="/meetings" class="stat-card">
        <span class="stat-value">{stats.meetings}</span>
        <span class="stat-label">Meetings</span>
      </a>
      <a href="/tasks" class="stat-card">
        <span class="stat-value">{stats.tasks}</span>
        <span class="stat-label">Tasks</span>
      </a>
      <a href="/documents" class="stat-card">
        <span class="stat-value">{stats.documents}</span>
        <span class="stat-label">Documents</span>
      </a>
    </div>
  </section>

  <section class="recent-section">
    <h2>Recent Activity</h2>
    <div class="entity-grid">
      {sampleEntities.map((entity) => (
        <EntityCard {...entity} />
      ))}
    </div>
    <div class="section-footer">
      <a href="/recent" class="view-all-link">View all recent activity &rarr;</a>
    </div>
  </section>

  <section class="explore-section">
    <h2>Explore</h2>
    <div class="explore-cards">
      <a href="/graph" class="explore-card">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="18" cy="5" r="3"></circle>
          <circle cx="6" cy="12" r="3"></circle>
          <circle cx="18" cy="19" r="3"></circle>
          <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
          <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
        </svg>
        <div class="explore-content">
          <h3>Graph View</h3>
          <p>Visualize connections between entities</p>
        </div>
      </a>
      <a href="/random" class="explore-card">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 3h5v5"></path>
          <path d="M8 3H3v5"></path>
          <path d="M12 22v-8.3a4 4 0 0 0-1.172-2.872L3 3"></path>
          <path d="m15 9 6-6"></path>
        </svg>
        <div class="explore-content">
          <h3>Random Page</h3>
          <p>Discover something unexpected</p>
        </div>
      </a>
    </div>
  </section>
</WikiLayout>

<style>
  .home-header {
    margin-bottom: var(--spacing-2xl);
  }

  .home-header h1 {
    margin-bottom: var(--spacing-sm);
  }

  .home-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    max-width: 600px;
  }

  /* Stats Section */
  .stats-section {
    margin-bottom: var(--spacing-2xl);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--spacing-md);
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-lg) var(--spacing-md);
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .stat-card:hover {
    border-color: var(--accent-color);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .stat-value {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--text-primary);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-top: var(--spacing-xs);
  }

  /* Recent Section */
  .recent-section {
    margin-bottom: var(--spacing-2xl);
  }

  .entity-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
  }

  .section-footer {
    margin-top: var(--spacing-lg);
    text-align: center;
  }

  .view-all-link {
    color: var(--link-color);
    font-weight: 500;
  }

  /* Explore Section */
  .explore-section {
    margin-bottom: var(--spacing-2xl);
  }

  .explore-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
  }

  .explore-card {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .explore-card:hover {
    border-color: var(--accent-color);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .explore-card svg {
    flex-shrink: 0;
    color: var(--accent-color);
  }

  .explore-content h3 {
    margin: 0 0 var(--spacing-xs);
    font-size: var(--text-base);
    color: var(--text-primary);
  }

  .explore-content p {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .home-description {
      font-size: var(--text-base);
    }
  }
</style>
